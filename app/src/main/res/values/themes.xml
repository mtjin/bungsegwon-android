<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bungsegwon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Toolbar 관련-->
    <style name="Toolbar.Basic" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextColor">@color/black</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@drawable/bg_toolbar_bottom_white_radius_16</item>
    </style>

    <style name="TextView.ToolbarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>